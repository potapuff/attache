<% item ||= @item %>

<%= simple_form_for([:event, item], html: {class: 'form-horizontal'}, remote: true, format: :html) do |f| %>
    <%= f.hidden_field :type %>
    <%= f.input :description, as: :string, input_html: { class: 'validate' }, wrapper_html: { class: 'input-field' } %>
    <%= f.button :submit %>
<% end %>

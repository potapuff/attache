<% item ||= @item %>

<%= simple_form_for([:event, item], html: {class: 'form-horizontal'}, remote: true, format: :html) do |f| %>
    <%= f.hidden_field :type %>
    <%= f.input :description, input_html: { class: 'materialize-textarea' }, wrapper_html: { class: 'input-field' }, label: false %>
    <%= f.button :submit %>
<% end %>


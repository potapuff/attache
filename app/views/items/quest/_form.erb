<% item ||= @item %>

<%= simple_form_for([:event, item], html: {class: 'form-horizontal'},
                    remote: true, format: :html) do |f| %>
    <%= f.error_notification %>
    <%= f.hidden_field :type %>
    <%= f.input :description, input_html: { class: 'materialize-textarea' }, wrapper_html: { class: 'input-field' } %>
    <%= f.button :submit %>
<% end %>

     